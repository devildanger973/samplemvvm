<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/image_view"
        android:layout_marginBottom="8dp"
        android:src="@drawable/spiderman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        app:layout_constraintBottom_toTopOf="@id/HD2"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:fabCustomSize="30dp"
        app:layout_constraintStart_toStartOf="@id/activity_image"
        app:layout_constraintTop_toTopOf="@+id/activity_image"
        android:contentDescription="@string/floating"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/floating"
        android:src="@android:drawable/ic_menu_share"
        app:fabCustomSize="30dp"
        app:layout_constraintEnd_toStartOf="@+id/save"
        app:layout_constraintTop_toTopOf="@+id/activity_image"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/save"
        android:layout_width="72dp"
        android:layout_height="31dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/roundsquare_button"
        android:text="@string/save"
        app:layout_constraintEnd_toEndOf="@id/activity_image"
        app:layout_constraintTop_toTopOf="@id/activity_image"
        tools:ignore="MissingConstraints" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerList"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/HD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:contentDescription="@string/floating"
        android:src="@android:drawable/ic_menu_view"
        app:layout_constraintBottom_toTopOf="@id/recyclerList"
        app:layout_constraintStart_toStartOf="@+id/activity_image"
        tools:ignore="MissingConstraints"
        app:fabCustomSize="50dp"
        android:layout_marginStart="16dp"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/HD1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginStart="28dp"
        android:contentDescription="@string/floating"
        android:src="@android:drawable/ic_menu_view"
        app:layout_constraintBottom_toTopOf="@id/recyclerList"
        app:layout_constraintStart_toEndOf="@id/HD"
        tools:ignore="MissingConstraints"
        app:fabCustomSize="50dp"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/HD2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginStart="28dp"
        android:contentDescription="@string/floating"
        android:src="@android:drawable/ic_menu_view"
        app:layout_constraintBottom_toTopOf="@id/recyclerList"
        app:layout_constraintStart_toEndOf="@id/HD1"
        tools:ignore="MissingConstraints"
        app:fabCustomSize="50dp"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/HD3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginStart="28dp"
        android:contentDescription="@string/floating"
        android:src="@android:drawable/ic_menu_view"
        app:layout_constraintBottom_toTopOf="@id/recyclerList"
        app:layout_constraintStart_toEndOf="@id/HD2"
        tools:ignore="MissingConstraints"
        app:fabCustomSize="50dp"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/HD4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginStart="28dp"
        android:contentDescription="@string/floating"
        android:src="@android:drawable/ic_menu_view"
        app:layout_constraintBottom_toTopOf="@id/recyclerList"
        app:layout_constraintStart_toEndOf="@id/HD3"
        tools:ignore="MissingConstraints"
        app:layout_constraintEnd_toEndOf="@id/activity_image"
        android:layout_marginEnd="16dp"
        app:fabCustomSize="50dp"

        />


</androidx.constraintlayout.widget.ConstraintLayout>